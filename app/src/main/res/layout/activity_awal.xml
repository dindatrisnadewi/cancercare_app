<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitStart"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/logo" />


            <ImageView
                android:id="@+id/imagecancer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/cancer1"
                android:layout_below="@id/logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imagecancer"
                android:textAlignment="center"
                android:layout_marginTop="-70dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="@string/apa_itu_kanker"
                android:textColor="@android:color/holo_blue_light"
                android:fontFamily="corbel"
                android:textSize="24sp"
                android:id="@+id/apakanker"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/apakanker"
                android:textAlignment="center"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:text="@string/desc_cancer"
                android:textColor="@android:color/white"
                android:fontFamily="corbel"
                android:textSize="16sp"
                android:id="@+id/kankeradalah"/>

            <ImageView
                android:id="@+id/imagesearch"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/research"
                android:layout_below="@id/kankeradalah"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imagesearch"
                android:textAlignment="center"
                android:layout_marginTop="-70dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="@string/penyebab_kanker"
                android:textColor="@android:color/holo_purple"
                android:fontFamily="corbel"
                android:textSize="24sp"
                android:id="@+id/penyebabkanker"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/penyebabkanker"
                android:textAlignment="center"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:text="@string/desc_penyebab"
                android:textColor="@android:color/white"
                android:fontFamily="corbel"
                android:textSize="16sp"
                android:id="@+id/penyebabkankeradalah"/>

            <ImageView
                android:id="@+id/imagefaktor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/faktor"
                android:layout_below="@id/penyebabkankeradalah"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imagefaktor"
                android:textAlignment="center"
                android:layout_marginTop="-70dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="@string/faktor_risiko"
                android:textColor="@android:color/holo_orange_light"
                android:fontFamily="corbel"
                android:textSize="24sp"
                android:id="@+id/faktorrisiko"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/faktorrisiko"
                android:textAlignment="center"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:text="@string/faktorrisiko"
                android:textColor="@android:color/white"
                android:fontFamily="corbel"
                android:textSize="16sp"
                android:id="@+id/faktorrisikoadalah"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/faktorrisikoadalah"
                android:textAlignment="center"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="60dp"
                android:text="@string/pelajarilebihlanjut"
                android:textColor="@android:color/white"
                android:fontFamily="corbel"
                android:textSize="14sp"
                android:id="@+id/pelajari"/>

            <Button
                android:id="@+id/button"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:text="Pelajari Selengkapnya"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                tools:layout_editor_absoluteX="114dp"
                tools:layout_editor_absoluteY="231dp"
                tools:ignore="MissingConstraints"
                android:background="@drawable/button_custom"
                android:textColor="@android:color/white"
                android:layout_below="@id/pelajari"
                android:layout_marginBottom="40dp"
                />

        </RelativeLayout>
    </ScrollView>


</LinearLayout>